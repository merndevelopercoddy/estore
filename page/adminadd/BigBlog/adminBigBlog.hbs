<form action="/admin/bigblog/add" method="post" enctype="multipart/form-data">
  <div class="mb-3">
    <label for="exampleInputEmail3" class="form-label">BlogName</label>
    <input name="blogname" type="text" class="form-control" id="exampleInputEmail3" aria-describedby="emailHelp"
      required>
  </div>
  <div class="mb-3">
    <label for="exampleInputEmail3" class="form-label">Name</label>
    <input name="name" type="text" class="form-control" id="exampleInputEmail3" aria-describedby="emailHelp"
      required>
  </div>
  {{!-- Image --}}
  <div class="mb-3">
    <label for="fileInput" class="form-label">Image</label>
    <input type="file" id="fileInput" name="image" accept="image/*" onchange="validateImageFile(this)" required>
  </div>
  <button type="submit" class="btn btn-primary">save</button>
</form>
{{#if bigblog.length}}

<table class="table">
  <thead>
    <tr>
      <th scope="col">#</th>
      <th scope="col">BlogName</th>
      <th scope="col">Name</th>
      <th scope="col">Date</th>
      <th scope="col">Image</th>
      <th scope="col">Edit</th>

    </tr>
  </thead>
  <tbody>
    {{#each bigblog}}
    <tr>
      <th scope="row">1</th>
      <td>{{{blogname}}}</td>
      <td>{{{name}}}</td>
      <td>{{{date}}}</td>    
      <td><img style="width: 100px; height: 100px;" src="../../../images/bigblog/{{image}}" alt=""></td>
      <td><a href="/admin/bigblog/{{id}}" class="btn btn-success">Edit</a></td>
    </tr>
    {{/each}}
  </tbody>
</table>
